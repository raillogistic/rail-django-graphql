############################################
# Production Environment Configuration (.env)
#
# Copy this file to `.env` for local overrides or use it directly
# in production via your container orchestration.
#
# IMPORTANT: Keep this file secure; do not commit secrets.
############################################

# --- Django Core ---
DJANGO_SECRET_KEY=REPLACE_WITH_STRONG_RANDOM_SECRET
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=example.com
DJANGO_TIME_ZONE=UTC
DJANGO_LANGUAGE_CODE=en-us

# Security and CSRF
CSRF_TRUSTED_ORIGINS=https://example.com
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# --- Database ---
# PostgreSQL URL format: postgres://USER:PASS@HOST:PORT/DB
DATABASE_URL=postgres://app_user:supersecret@postgres:5432/app_db

# --- Redis (Cache/Tasks) ---
# Redis URL format: redis://HOST:PORT/DB
REDIS_URL=redis://redis:6379/0

# --- Static/Media ---
STATIC_URL=/static/
STATIC_ROOT=/app/static
MEDIA_URL=/media/
MEDIA_ROOT=/app/media

# --- GraphQL Settings ---
ENABLE_GRAPHIQL=False
ENABLE_INTROSPECTION=False
GRAPHENE_SCHEMA=config.schema.schema
GRAPHQL_MAX_QUERY_DEPTH=10
GRAPHQL_MAX_QUERY_COMPLEXITY=1000
GRAPHQL_ENABLE_CACHING=True
GRAPHQL_CACHE_TIMEOUT=300
GRAPHQL_ENABLE_DATALOADER=True

# --- CORS ---
CORS_ALLOWED_ORIGINS=https://example.com
CORS_ALLOW_CREDENTIALS=True

# --- Logging ---
LOG_LEVEL=INFO

# --- Optional Email (choose EMAIL_URL or SMTP vars) ---
# EMAIL_URL=smtp://user:pass@smtp.example.com:587?tls=True
# Or SMTP variables:
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_USER=notifications@example.com
# EMAIL_PASS=change-me
# EMAIL_USE_TLS=True