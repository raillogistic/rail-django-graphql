# Django
DJANGO_SECRET_KEY=change-me
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_TIME_ZONE=UTC
DJANGO_LANGUAGE_CODE=en-us

# GraphQL toggles
ENABLE_GRAPHIQL=True
ENABLE_INTROSPECTION=True
GRAPHENE_SCHEMA=config.schema.schema
GRAPHQL_MAX_QUERY_DEPTH=10
GRAPHQL_MAX_QUERY_COMPLEXITY=1000
GRAPHQL_ENABLE_CACHING=True
GRAPHQL_CACHE_TIMEOUT=300
GRAPHQL_ENABLE_DATALOADER=True

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=True

# Database (dev defaults to sqlite if DATABASE_URL missing)
DATABASE_URL=sqlite:///./db.sqlite3

# Redis (optional)
REDIS_URL=redis://localhost:6379/0

# Static/Media
STATIC_URL=/static/
STATIC_ROOT=./staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=./media

# Logging
LOG_LEVEL=DEBUG

# Optional Email
# EMAIL_URL=smtp://user:pass@smtp.example.com:587?tls=True
# Or SMTP variables:
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_USER=notifications@example.com
# EMAIL_PASS=change-me
# EMAIL_USE_TLS=True