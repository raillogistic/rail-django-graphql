    "pre_rollback_backup": true,
    "stop_services_timeout": 30,
    "start_services_timeout": 60,
    "health_check_retries": 3,
    "health_check_interval": 10
  },
  "monitoring": {
    "log_file": "rollback.log",
    "metrics_endpoint": null,
    "alert_on_failure": true
  }
