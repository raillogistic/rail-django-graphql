# Include documentation files
include README.md
include LICENSE
include CHANGELOG.md
include CONTRIBUTING.md
include CODE_OF_CONDUCT.md

# Include configuration files
include pyproject.toml
include setup.py

# Include package data
recursive-include rail_django_graphql/templates *
recursive-include rail_django_graphql/static *
recursive-include rail_django_graphql/management *

# Include documentation
recursive-include docs *

# Include examples
recursive-include examples *

# Exclude development and build files
exclude .gitignore
exclude .pre-commit-config.yaml
exclude .editorconfig
exclude docker-compose*.yml
exclude Dockerfile*
exclude rollback_config.json
exclude introspect_schema.py
exclude cache_middleware.py
exclude manage.py
exclude schema*.graphql

# Exclude directories
recursive-exclude .git *
recursive-exclude .github *
recursive-exclude .pytest_cache *
recursive-exclude __pycache__ *
recursive-exclude *.egg-info *
recursive-exclude build *
recursive-exclude dist *
recursive-exclude .venv *
recursive-exclude venv *
recursive-exclude env *
recursive-exclude logs *
recursive-exclude media *
recursive-exclude scripts *

# Exclude test files from main package
recursive-exclude tests *
exclude conftest.py

# Exclude compiled Python files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .DS_Store
global-exclude *.so